%h3= @task.title
= @task.description
= form_with model: @state, url: task_task_state_path(id: @state.id, task_id: @task.id), method: :put do |f|
  .field
    %br
    = f.select :state, TaskState.states.keys, {}, {class: 'form-control'}
  .actions
    %br
    = f.submit("Save", class: 'btn btn-success')

= form_for(:comment, url: task_comments_path(@task), method: :post) do |f|
  .field
    = f.text_field(:body, {:class => 'form-control'})
  .actions
    %br/
    = f.submit("Add comment", {:class => 'btn btn-success'})


= render partial: 'layouts/parts/comments_block', locals: { comments: @task.comments }




