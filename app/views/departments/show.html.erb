<%= @department.title %>
<%= link_to 'Delete', department_path(@department), method: :delete %>
<%= link_to 'Edit', edit_department_path(@department) %>

<% if @department.cover_img.attached? %>

  <%= image_tag(@department.cover_img, {class: 'rounded', style: 'height: 250px; width: 250px'}) %>

<% end %>

<%= link_to 'Add plan', new_department_plan_path(@department.id) %>

<% @department.plans.each do |plan| %>
  <div class="alert alert-light">
    <p><strong><%= plan.title %></strong></p>
  </div>
<% end %>