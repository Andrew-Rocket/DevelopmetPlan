<%= @plan.title %>
<%= link_to 'Delete', department_plan_path(@plan), method: :delete %>
<%= link_to 'Edit', edit_department_plan_path(@plan) %>
<%= link_to 'Add flow step', department_plan_flow_steps_path(plan_id: @plan.id) %>


<%= form_for(:flow_step, url: department_plan_flow_steps_path(plan_id: @plan.id)) do |f| %>
  <p>
    <%= f.label(:title) %>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Add flow step", {:class => 'btn btn-success'}) %>
  </p>
<% end %>

<section class="lists-container">
  <% @plan.flow_steps.each do |fs| %>
    <div class="list">

      <h3 class="list-title"><%= fs.title %></h3>

      <ul class="list-items">
        <% fs.tasks.each do |task| %>
          <li><%= task.title %></li>
        <% end %>
      </ul>

      <%= link_to 'Add flow step',
                  department_plan_flow_step_tasks_url(flow_step_id: fs.id),
                  class: 'add-card-btn btn' %>
    </div>
  <% end %>

  <button class="add-list-btn btn">Add a list</button>

</section>

