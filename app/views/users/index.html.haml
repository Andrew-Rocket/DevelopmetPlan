- @users.each do |user|
  .card{:style => "width: 18rem;"}
    - if user.avatar.attached?
      = image_tag(user.avatar, class: 'card-img-top', alt: 'Avatar')
    .card-body{:style => 'text-align: center;'}
      %h5.card-title
        = user.first_name
        = user.last_name
      = link_to 'Open', user_path(user), class: 'btn btn-primary'